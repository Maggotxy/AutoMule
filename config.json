{
  "system": {
    "name": "iFlow Continuous Development System",
    "version": "1.0.0",
    "checkInterval": 60000,
    "maxConcurrentTasks": 1
  },
  "ideaSources": {
    "fileWatcher": {
      "enabled": true,
      "watchDirectory": "./ideas",
      "filePattern": "*.txt"
    },
    "simulatedCommunity": {
      "enabled": false,
      "updateInterval": 300000
    },
    "randomPainPoints": {
      "enabled": false,
      "generateInterval": 600000
    }
  },
  "taskQueue": {
    "maxSize": 100,
    "priorityLevels": [
      "high",
      "medium",
      "low"
    ]
  },
  "codeRepository": {
    "outputDirectory": "./generated-code",
    "autoCommit": true,
    "commitMessage": "Auto-generated by iFlow Continuous Dev"
  },
  "logging": {
    "level": "info",
    "directory": "./logs",
    "maxFiles": 10,
    "maxSize": "10m"
  },
  "iflow": {
    "enabled": true,
    "url": "ws://localhost:8090/acp",
    "processStartPort": 8090,
    "timeout": 600000,
    "idleTimeoutMs": 120000,
    "firstIdleTimeoutMs": 300000,
    "connectTimeoutMs": 60000,
    "sendTimeoutMs": 120000,
    "logLevel": "INFO",
    "autoStartProcess": true,
    "permissionMode": "selective",
    "autoApproveTypes": [
      "edit",
      "execute"
    ],
    "fileAccess": true,
    "fileReadOnly": false
  },
  "niuMaStation": {
    "enabled": true,
    "maxConcurrentNiuma": 5,
    "autoStartOnCreate": true,
    "iterationIntervalMs": 60000,
    "restAfterIterationMs": 30000
  },
  "ideaGenerator": {
    "enabled": true,
    "intervalMs": 300000,
    "maxIdeasPerDay": 10,
    "sources": {
      "templates": false,
      "ai": true,
      "external": true,
      "webSources": {
        "hackerNews": {
          "enabled": true,
          "url": "https://news.ycombinator.com/rss",
          "dataType": "rss",
          "description": "Hacker News 技术热点"
        },
        "redditWebDev": {
          "enabled": true,
          "url": "https://www.reddit.com/r/webdev/top/.json?t=day",
          "dataType": "json",
          "description": "Reddit WebDev 每日精选"
        },
        "v2ex": {
          "enabled": true,
          "url": "https://www.v2ex.com/index.xml",
          "dataType": "rss",
          "description": "V2EX 极客讨论"
        }
      }
    },
    "batchSize": 3
  },
  "autoIterate": {
    "enabled": true,
    "dimensions": {
      "ui": {
        "name": "UI展示",
        "description": "视觉美观、布局合理、响应式设计、动画流畅",
        "weight": 1.0
      },
      "userEffect": {
        "name": "用户效果",
        "description": "功能完整、交互直观、结果正确",
        "weight": 1.0
      },
      "experience": {
        "name": "使用感受",
        "description": "操作便捷、学习成本低、反馈及时",
        "weight": 1.0
      },
      "feedback": {
        "name": "点击反馈",
        "description": "按钮响应、状态变化、加载提示",
        "weight": 1.0
      },
      "efficiency": {
        "name": "运行效率",
        "description": "页面加载速度、代码执行效率、资源占用",
        "weight": 1.0
      },
      "codeQuality": {
        "name": "代码质量",
        "description": "结构清晰、可维护性、错误处理",
        "weight": 1.0
      }
    }
  }
}